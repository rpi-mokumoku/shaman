  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Device Management
        <small>デバイス管理</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

    <div class="box" style="display: none" id="main_box">
      <div class="box-header">
        <h3 class="box-title pull-left">Devices</h3>
        <button type="button" class="btn btn-danger btn-sm pull-right" data-toggle="modal" data-target="#modal-delete" id="modal_delete_button" disabled>
          Delete Selected
        </button>
        <form role="form" action="/devices/_trs" method="post" id="search">
          <div class="input-group input-group-sm pull-right" style="width: 150px;">
            <input type="text" name="word" value="<%= word %>" class="form-control" placeholder="Search">

            <div class="input-group-btn">
              <button type="button" class="btn btn-default" id="search_button"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover" id="devices_table">
          <thead>
            <tr class="header" >
              <th></th>
              <th>Code</th>
              <th>Name</th>
              <th>VPN IP Address</th>
              <th>VPN Port</th>
              <th>Connection</th>
              <th>Door</th>
              <th>Description</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% //_index_trs.ejs /devices/_trs %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
      <div class="box-footer clearfix">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal-device" id="modal_add_button">
          Add Device
        </button>
      </div>
      <!-- /.box-footer -->
    </div>

    <%  //削除用モーダル %>
    <div class="modal fade" id="modal-delete" style="display: none;">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title">Delete Devices</h4>
          </div>
          <div class="modal-body">
            <h4>Are you sure you want to disconnect and delete the following devices?</h4>
            <ul id="modal_delete_list">
              <li class="dummy"></li>
            </ul>
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-danger pull-right" id="delete_button">Delete</button>
              <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Cancel</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    
    <%  //登録用モーダル %>
    <div class="modal fade" id="modal-device" style="display: none;">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="modal_device_title"></h4>
          </div>
          <div class="modal-body">
          <form role="form" action="" method="post" id="device_form">
            <!-- text input -->
            <div class="form-group">
              <label>Code</label>
              <input type="text" class="form-control" placeholder="Enter ..." name="code">
            </div>
            <div class="form-group">
              <label>Name</label>
              <input type="text" class="form-control" placeholder="Enter ..." name="name">
            </div>
            <div class="form-group" style="margin-bottom: 5px;">
              <input type="checkbox" class="form-control" name="test" id="test" disabled>
              <label>Connection settings</label>
            </div>
            <div class="group">
              <div class="form-group">
                <label>VPN IP Address</label>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-laptop"></i>
                  </div>
                  <input type="text" class="form-control" data-inputmask="'alias': 'ip'" data-mask="" name="ip">
                </div>
                <!-- /.input group -->
              </div>
              <div class="form-group">
                <label>VPN Port</label>
                <input type="text" class="form-control" placeholder="Enter ..." name="port">
              </div>
              <div class="form-group">
                <button type="button" class="btn btn-flat bg-purple" id="test_btn">
                  <i class="fa fa-wifi"></i>
                  Test connect
                </button><!--
             --><button type="button" class="btn btn-flat" style="width: 130px" disabled id="con_status">
                  <i class="fa fa-ellipsis-h"></i><span>&nbsp; UN CONNECT</span>
                </button>
                <span id="con_msg"></span>
              </div>
            </div>
            <div class="form-group">
              <label>Description</label>
              <textarea class="form-control" rows="3" placeholder="Enter ..." name="description"></textarea>
            </div>
            <input type="hidden" name="id">
          </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary pull-right" id="register_button">Register</button>
            <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Cancel</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <script src="/javascripts/devices/index.js"></script>
